# Base de données DÉVELOPPEMENT
DATABASE_URL="postgresql://postgres:password@localhost:5432/velocitaleads_dev"

# JWT DÉVELOPPEMENT
JWT_SECRET="your-jwt-secret-key"
JWT_EXPIRES_IN="7d"
JWT_REFRESH_SECRET="your-jwt-refresh-secret"
JWT_REFRESH_EXPIRES_IN="30d"

# Email (Google Workspace SMTP)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@your-domain.com"
SMTP_PASS="your-app-password"
EMAIL_FROM="your-email@your-domain.com"
EMAIL_FROM_NAME="VelocitaLeads DEV"
EMAIL_FROM_ADDRESS="your-email@your-domain.com"

# OpenAI (pour les fonctionnalités IA premium)
OPENAI_API_KEY="your-openai-api-key"
OPENAI_MODEL="gpt-3.5-turbo"

# Application DÉVELOPPEMENT
NODE_ENV="development"
PORT=3001
FRONTEND_URL="http://localhost:3000"

# Tracking des emails DÉVELOPPEMENT
TRACKING_BASE_URL="http://localhost:3001"
TRACKING_PIXEL_URL="http://localhost:3001/api/tracking/pixel"

# Sécurité DÉVELOPPEMENT
BCRYPT_ROUNDS=10
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=1000

# Stockage
UPLOADS_DIR="./uploads"
MAX_FILE_SIZE=10485760
PDF_TEMPLATES_DIR="./src/templates"
PDF_OUTPUT_DIR="./uploads/pdfs"
PDF_SALT="your-pdf-salt"

# Application
APP_BASE_URL="http://localhost:3000"

# Airtable (pour l'emailing marketing)
AIRTABLE_ENABLED="false"
AIRTABLE_API_KEY="your-airtable-api-key"
AIRTABLE_BASE_ID="your-airtable-base-id"
AIRTABLE_USERS_TABLE="your-airtable-users-table"