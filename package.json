{
  "name": "velocitaleads-crm",
  "version": "1.0.0",
  "description": "CRM français pour freelances et petites entreprises - Création et envoi de devis professionnels",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "prisma generate && tsc || true",
    "start": "node dist/server.js",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "type-check": "tsc --noEmit",
    "db:migrate": "prisma migrate dev",
    "db:seed": "tsx src/db/seed.ts",
    "db:reset": "prisma migrate reset",
    "db:generate": "prisma generate",
    "db:studio": "prisma studio",
    "admin": "tsx src/scripts/admin.ts",
    "logs:clear": "rm -f logs/*.log",
    "setup": "npm install && prisma generate && prisma migrate dev && npm run db:seed",
    "clean": "rm -rf dist uploads/pdfs logs/*.log"
  },
  "prisma": {
    "seed": "tsx src/db/seed.ts"
  },
  "keywords": [
    "crm",
    "french",
    "quotes",
    "devis",
    "freelance"
  ],
  "author": "VelocitaLeads",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^6.13.0",
    "@types/pdfkit": "^0.14.0",
    "airtable": "^0.12.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "js-tokens": "^9.0.1",
    "jsonwebtoken": "^9.0.2",
    "module-alias": "^2.2.3",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.7",
    "pdf-lib": "^1.17.1",
    "pdfkit": "^0.17.1",
    "prisma": "^6.13.0",
    "typescript": "^5.3.2",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.4",
    "@types/nodemailer": "^6.4.14",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "axios": "^1.10.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "tsx": "^4.6.2"
  },
  "engines": {
    "node": "20.x"
  },
  "_moduleAliases": {
    "@": "dist"
  }
}
