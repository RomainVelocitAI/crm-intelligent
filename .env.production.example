# Variables d'environnement PRODUCTION pour Render

# Base de données PRODUCTION
DATABASE_URL="votre-url-postgres-render"

# JWT PRODUCTION
JWT_SECRET="générer-une-clé-sécurisée-64-caractères"
JWT_EXPIRES_IN="7d"
JWT_REFRESH_SECRET="générer-une-autre-clé-sécurisée-64-caractères"
JWT_REFRESH_EXPIRES_IN="30d"

# Resend API (OBLIGATOIRE pour les emails)
RESEND_API_KEY="re_xxxxxxxxxxxxxxxxxxxxx"  # Obtenir depuis https://resend.com/api-keys
RESEND_FROM_EMAIL="noreply@votre-domaine.com"  # Utiliser un domaine vérifié dans Resend

# OpenAI (pour les fonctionnalités IA premium)
OPENAI_API_KEY="sk-xxxxxxxxxxxxxxxxxxxxx"
OPENAI_MODEL="gpt-3.5-turbo"

# Application PRODUCTION
NODE_ENV="production"
PORT=3001
FRONTEND_URL="https://crm-intelligent.vercel.app"

# Tracking des emails PRODUCTION
TRACKING_BASE_URL="https://crm-intelligent.onrender.com"
TRACKING_PIXEL_URL="https://crm-intelligent.onrender.com/api/tracking/pixel"

# Sécurité PRODUCTION
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Stockage
UPLOADS_DIR="./uploads"
MAX_FILE_SIZE=10485760
PDF_TEMPLATES_DIR="./src/templates"
PDF_OUTPUT_DIR="./uploads/pdfs"
PDF_SALT="générer-un-salt-aléatoire"

# Application
APP_BASE_URL="https://crm-intelligent.vercel.app"

# Variables Render (automatiquement définies)
# RENDER=true
# RENDER_SERVICE_NAME=velocitaleads-api
# IS_PULL_REQUEST=false
